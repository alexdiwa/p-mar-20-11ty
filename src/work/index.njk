<ul class="work">
{% for project in work %}
  <li>
    <details {% if loop.index == 1 %}open{% endif %}>
      <summary>
        {{ project.title }}
      </summary>
      <p class="work-description">{{ project.description }}</p>
      {% if project.links.length %}
      <ul>
        {% for link in project.links %}
          <li>
            <a href="{{ link.url }}" rel="noopener noreferrer" target="_blank">{{ link.label }}</a>
          </li>
        {% endfor %}
      </ul>
      {% endif %}
      {% if project.images.length %}
      <ul class="work-images">
        {% for image in project.images %}
          <li>
            <img
              srcset="
                https://res.cloudinary.com/alex-diwa/image/upload/q_auto,f_auto,w_320/{{ image.url }} 320w,
                https://res.cloudinary.com/alex-diwa/image/upload/q_auto,f_auto,w_640/{{ image.url }} 640w,
                https://res.cloudinary.com/alex-diwa/image/upload/q_auto,f_auto,w_960/{{ image.url }} 960w,
                https://res.cloudinary.com/alex-diwa/image/upload/q_auto,f_auto,w_1280/{{ image.url }} 1280w,
                https://res.cloudinary.com/alex-diwa/image/upload/q_auto,f_auto,w_1600/{{ image.url }} 1600w,
                https://res.cloudinary.com/alex-diwa/image/upload/q_auto,f_auto,w_1920/{{ image.url }} 1920w,
                https://res.cloudinary.com/alex-diwa/image/upload/q_auto,f_auto,w_2240/{{ image.url }} 2240w,
                https://res.cloudinary.com/alex-diwa/image/upload/q_auto,f_auto,w_2560/{{ image.url }} 2560w"
              sizes="(min-width: 48em) 48em, 100vw"
              src="https://res.cloudinary.com/alex-diwa/image/upload/q_auto,f_auto,w_640/{{ image.url }}"
              alt="{{ image.alt }}"
            />
          </li>
        {% endfor %}
      </ul>
      {% endif %}
    </details>
  </li>
{% endfor %}
